\definecolor{yfibred}{rgb}{0.5, 0, 0}
\definecolor{yfibgreen}{rgb}{0, 0.273, 0}
\definecolor{yfibgold}{rgb}{0.695, 0.527, 0}

\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=true,shadow=false,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=true,shadow=false,colsep*=.75ex,sep=.75ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode
}

\newlength{\framethickness}
\setlength{\framethickness}{10pt}
\newlength{\framespacing}
\setlength{\framespacing}{\beamer@rightmargin}
\newlength{\hopwidth}
\setlength{\hopwidth}{3.25in}
\newlength{\hopheight}
\setlength{\hopheight}{2in}
\newlength{\hoptskip}
\setlength{\hoptskip}{0.33\hopheight}

\newcommand{\hop}[8]{
    \draw [color=yfibgreen, line width=3pt] (#1in, #2in) rectangle (#1in+\hopwidth,#2in+\hopheight);
    \draw [color=yfibgreen] (#1in, #2in+\hopheight) node[anchor=north west] {\footnotesize{\textbf{#3}}};
    \draw [color=yfibgreen] (#1in+\hopwidth, #2in+\hopheight) node[anchor=north east] {\footnotesize{#4}};
    \draw [color=yfibgreen] (#1in+0.5\hopwidth, #2in+\hopheight-\hoptskip+0.2em) node[text width=0.9\hopwidth, anchor=north, text badly centered] {\tiny{#5}\par};
    \draw [color=yfibgold] (#1in+0.5\hopwidth, #2in) node[text width=\hopwidth, anchor=south, text badly centered] {\scriptsize{#6}\par};

    \draw [color=yfibgold] (#1in, #2in+\hopheight-\hoptskip) node[anchor=south west] {\textit{\scriptsize{#7\vphantom{g}}}};
    \draw [color=yfibgold] (#1in+\hopwidth, #2in+\hopheight-\hoptskip) node[anchor=south east] {\scriptsize{#8\vphantom{g}}};

    \draw [color=yfibgreen, line width=3pt] (#1in, #2in+\hopheight-\hoptskip+0.2em) -- (#1in+\hopwidth, #2in+\hopheight-\hoptskip+0.2em);
}

\setbeamertemplate{background canvas}{  
\begin{tikzpicture}[scale=1.0]
    \clip (0,0) rectangle (\paperwidth,\paperheight);
    \fill[color=yfibgreen] (\framespacing,\framespacing) rectangle (\paperwidth-\framespacing,\framespacing+\framethickness);
    \fill[color=yfibgreen] (\paperwidth-\framespacing,\framespacing) rectangle (\paperwidth-\framespacing-\framethickness,\textheight-\framespacing);
    \fill[color=yfibgreen] (\framespacing,\framespacing) rectangle (\framespacing+\framethickness,\textheight-\framespacing);
    \fill[color=yfibgreen] (\framespacing,\textheight-\framespacing) rectangle (\paperwidth-\framespacing,\textheight-\framespacing-\framethickness);

    \node [anchor=north west] (logo) at (2\framespacing+\framethickness, \paperheight-2\framespacing-\framethickness) {\includegraphics[height=3.75in]{figs/yfib.pdf}};
    \node [anchor=south west] (title) at (16in, \paperheight-2\framespacing-\framethickness-3.0in) {\includegraphics[height=1.75in]{figs/title.pdf}};
    \node [anchor=north west,color=yfibgold] (url) at (16in, \paperheight-2\framespacing-\framethickness-3.0in) {\huge{\textbf{\url{http://www.homebrewstuff.com/hop-profiles}}}};

  \input{hoplist.tex}
  \input{edgelist.tex}

\end{tikzpicture}
}

